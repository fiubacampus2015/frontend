<?xml version="1.0" encoding="utf-8"?>

<com.fiuba.campus2015.customcard.VideoCardItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        style="@style/MainCardView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleTextView"
                    android:textColor="#3C3C3C"
                    android:textSize="24sp"
                    tools:text="This is the title"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionTextView"
                    android:visibility="gone"
                    android:textColor="#878787"
                    tools:text="And this is the description"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/imagePreview3"
                android:background="#ff000000"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <View
                android:id="@+id/cardDivider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#608DFA"
                android:layout_marginLeft="@dimen/big_padding"
                android:layout_marginRight="@dimen/big_padding"
                android:visibility="visible"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:id="@+id/deleteButtonVideoCard"
                    android:clickable="true"
                    android:focusable="false"
                    android:textStyle="bold"
                    android:padding="@dimen/big_padding"
                    android:drawableLeft="@drawable/ic_delete"
                    android:drawablePadding="@dimen/big_padding"
                    style="@style/LeftButtonBaseStyle"
                    tools:text="CLICK ME"
                    android:textColor="#ffff171f" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.fiuba.campus2015.customcard.VideoCardItemView>