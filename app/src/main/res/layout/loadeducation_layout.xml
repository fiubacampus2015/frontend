<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hola, ....!"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Educación"
        android:id="@+id/textView6"
        android:gravity="center_horizontal"
        android:textColor="#ff010101"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Carrera"
            android:id="@+id/textView9"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCarreras"
            android:layout_marginLeft="20dp"
            android:spinnerMode="dropdown"
            android:layout_marginRight="20dp"
            android:background="#ffd2d4ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Orientación"
            android:id="@+id/textView10"
            android:textColor="#ff000000"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinnerOrientacion"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:spinnerMode="dropdown"
            android:background="#ffd2d4ff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Año de ingreso"
                android:id="@+id/textView7"
                android:textColor="#ff000000"
                android:autoText="false"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                android:maxLines="1"
                android:maxWidth="4dp"
                android:maxLength="4"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/calendaricon"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Materias Aprobadas"
        android:id="@+id/textView8"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/list"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"

        android:scrollbarStyle="outsideOverlay"/>

</LinearLayout>