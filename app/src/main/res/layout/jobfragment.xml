<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Añadir un nuevo empleo"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff000000"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Descripción"
                    android:id="@+id/textView5"
                    android:textColor="#ff000000"
                    android:layout_marginBottom="10dp"
                    android:maxLength="200"
                    android:maxLines="3"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:background="#fff5f5f5"
                    android:lines="3"
                    android:maxLines="3"
                    android:textColor="#ff000000"
                    android:nestedScrollingEnabled="false"
                    android:maxLength="100" />
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    style="?android:attr/buttonStyle"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:text="Añadir"
                    android:id="@+id/buttonx"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/add_button_shape"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Desde:"
                android:id="@+id/textView8"
                android:textColor="#ff000000"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:maxLength="4"
                android:maxLines="1"
                android:phoneNumber="false"
                android:numeric="integer" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/calendaricon"
                android:layout_marginRight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hasta:"
                android:id="@+id/textView11"
                android:textColor="#ff000000"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:maxLength="4"
                android:maxLines="1"
                android:phoneNumber="true"
                android:numeric="integer" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/calendaricon" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#9e1d51cc"
        android:layout_height="1dp"
        android:id="@+id/separator"

        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/listJob"
            android:layout_marginRight="50dp"


            android:scrollbarStyle="outsideOverlay"
            android:choiceMode="singleChoice"
            android:divider="#0097A7"
            android:dividerHeight="1dp"
            android:fastScrollAlwaysVisible="false"
            android:footerDividersEnabled="false"
            android:elevation="1dp"
            android:layout_weight="0.60"
            android:background="@drawable/list_shape"
            android:layout_marginLeft="40dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Borrar"
            android:id="@+id/idDelete"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/delete_button_shape"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>