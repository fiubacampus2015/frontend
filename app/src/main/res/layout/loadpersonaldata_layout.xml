<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Here you put the rest of your current view-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idlayout">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fiuba.campus2015.extras.RoundedImageView
                    android:layout_width="150dp"
                    android:id="@+id/idPhoto"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_account_circle_grey_48dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <com.fiuba.campus2015.extras.ButtonFloatMaterial
                    android:id="@+id/buttonImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="25dp"
                    android:background="#FFFF00"
                    app:animate="true"
                    app:iconDrawable="@drawable/ic_action_camera" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/nombreapellido">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idname"
                    android:hint="Nombre"
                    android:layout_weight="1"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idsurname"
                    android:hint="Apellido"
                    android:layout_weight="1"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idmail"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:inputType="textEmailAddress"
                    android:enabled="false"
                    android:editable="false" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idphone"
                    android:hint="Celular"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:inputType="phone" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idnationality"
                    android:layout_gravity="center_horizontal"
                    android:hint="Nacionalidad"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="4dp"/>

                <RadioGroup android:id="@+id/idradiogroupshow"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="15dp">

                    <RadioButton android:id="@+id/genderFemaleShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"/>

                    <RadioButton android:id="@+id/genderMaleShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H"/>

                </RadioGroup>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fechaNacimiento"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/date_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            app:met_primaryColor="@color/accent"
                            app:met_floatingLabel="normal"
                            android:hint="Fecha Nacimiento"
                            android:inputType="date"/>

                        <ImageView
                            android:id="@+id/date_buttonBirthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="60dp"
                            android:src="@drawable/ic_insert_invitation_grey"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</ScrollView>